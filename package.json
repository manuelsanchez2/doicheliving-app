{
  "name": "doicheliving-app",
  "private": true,
  "version": "1.0.0",
  "description": "MVP - Gesellenst√ºck",
  "main": "server.js",
  "scripts": {
    "test": "npm run lint && cd client && npm test",
    "server": "nodemon server.js",
    "lint": "eslint . --ext .js",
    "build": "cd client && npm run build && npm run build-storybook",
    "prettify": "prettier --write .",
    "postinstall": "cd client && npm install",
    "client": "cd client && npm start",
    "storybook": "cd client && npm run storybook",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\" \"npm run storybook\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuelsanchez2/doicheliving-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manuelsanchez2/doicheliving-app/issues"
  },
  "homepage": "https://github.com/manuelsanchez2/doicheliving-app#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "json-server": "^0.16.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "CI=true npm test"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json}": "prettier --write"
  }
}
